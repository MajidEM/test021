{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "description": "Update minor/patch versions for Go Docker images",
            "matchManagers": [
                "dockerfile",
            ],
            "allowedVersions": "/\\d+\\.\\d+$ | \\d+\\.\\d+\\.\\d+$ | \\d+\\.\\d+\\-[a-z]+$ | \\d+\\.\\d+\\.\\d+\\-[a-z]+$/",
            "matchPackagePrefixes": [
                "golang"
            ],
            "enabled": true,
            "ignorePaths": [],
            "pinDigests": true,
            "separateMajorMinor": true,
            "separateMinorPatch": true,
            "matchCategories": [
                "docker"
            ],
            "major": {
                "enabled": false
            },
            "minor": {
                "enabled": true
            },
            "patch": {
                "enabled": true
            },
            "groupName": "Go Docker images"
        }
    ],
    "docker": {
        "fileMatch": [
            "(^|/|\\.)Dockerfile$",
            "(^|/)docker-compose[^/]*\\.ya?ml$"
        ],
        "versioning": "docker",
        "pinDigests": true
    },
    "postUpdateOptions": [
        "gomodTidy"
    ],
    "platformAutomerge": true
}
