{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
      "dockerfile"
    ],
  "packageRules": [
    {
      "description": "Update minor/patch versions for Go Docker images",
      "matchPackagePrefixes": ["golang"],
      "matchUpdateTypes": ["minor", "patch"],
      "versioning": "docker",
      "enabled": true,
      "ignorePaths": [],
      "pinDigests": true,
      "groupName": "Go Docker images"
    }
  ],
  "docker": {
    "fileMatch": [
      "(^|/|\\.)Dockerfile$",
      "(^|/)docker-compose[^/]*\\.ya?ml$"
    ],
    "versioning": "docker",
    "pinDigests": true
  }
}
