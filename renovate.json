{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
      "dockerfile"
    ],
  "packageRules": [
    {
      "description": "Update minor/patch versions for Go Docker images",
      "matchPackagePrefixes": ["golang"],
      "versioning": "docker",
      "allowedVersions": "/\\d+\\.\\d+$ | \\d+\\.\\d+\\.\\d+$ | \\d+\\.\\d+\\-[a-z]+$ | \\d+\\.\\d+\\.\\d+\\-[a-z]+$/",
      "enabled": true,
      "ignorePaths": [],
      "pinDigests": true,
      "major": {
          "enabled": false
        },
        "minor": {
          "enabled": true
        },
        "patch": {
          "enabled": true
        },
      "groupName": "Go Docker images"
    }
  ],
  "docker": {
    "fileMatch": [
      "(^|/|\\.)Dockerfile$",
      "(^|/)docker-compose[^/]*\\.ya?ml$"
    ],
    "versioning": "docker",
    "pinDigests": true
  }
}
